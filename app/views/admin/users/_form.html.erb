<%= simple_form_for [:admin, @user] do |f| %>
  <%= f.error_notification %>

  <%= f.input :email %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>

  <%= f.check_box :in_office, {checked: @user.in_office} %>
  <%= f.label :in_office %> <br>

  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
