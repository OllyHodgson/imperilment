<%= simple_form_for [@game, @answer] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :category %>
    <%= f.input :correct_question %>
    <%= f.input :answer %>
    <%= f.input :amount %>
    <%= f.input :start_date %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
