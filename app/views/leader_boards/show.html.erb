<div class='dropdown-nav pull-right'>
  <span><%= t :previous_model, model: Game.model_name.human(count: :many) %>:</span>
  <select>
    <% Game.order(:ended_at).each do |game| %>
      <%= content_tag :option, l(game.ended_at, format: :long), value: game.id, data: {path: leader_board_path(game)}, selected: game.id == @game.id %>
  <% end %>
  </select>
</div>
<h1><%= t :leader_board %></h1>

<table class='table'>
  <thead>
    <tr>
      <th class='score'><%= t :weekly_total %></th>
      <th><%= User.model_name.human %></th>
      <% unless @game.answers.empty? %>
        <th class='hidden-phone'><%= t :breakdown %></th>
    <% end %>
    <th class='record'><%= t :percentage_correct %></th>
    </tr>
  </thead>
  <tbody>
  <% @results.each do |result| %>
    <tr class="<%= rank_class(result.position) %>">
      <td class='score'>
        <% if result.position == 1 %>
          <%= icon 'trophy' %>
        <% end %>
        <%= "#{t :currency_symbol} #{result.total}" %>
      </td>
      <td class='email'><%= result.user.identifier %></td>
      <% unless @game.answers.empty? %>
        <td class='hidden-phone'>
          <table class='breakdown'>
            <thead>
              <tr>
                <% result.answers.each do %>
                  <th></th>
              <% end %>
              </tr>
            </thead>
            <tbody>
              <tr>
                <% @game.date_range.zip(result.results).each do |(date, result_type)| %>
                  <td><%= link_to breakdown_icon(result_type), breakdown_link(@game, date) %></td>
                <% end %>
              </tr>
            </tbody>
          </table>
        </td>
        <td>
          <%= number_to_percentage result.user.percentage_correct_by_game(result.game), precision: 1 %>
        </td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to t(:overall_results), overall_leader_board_path, class: 'btn btn-default' %>
<%= link_to t(:overall_results_by_money), overall_money_leader_board_path, class: 'btn btn-default' %>

