<%= simple_form_for [@game, @answer, @question] do |f| %>
  <%= f.error_notification %>
  <p>
    <%= @answer.answer %>
  </p>

  <div class="form-inputs">
    <%= f.input :reponse, input_html: {class: 'input-xxlarge'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
