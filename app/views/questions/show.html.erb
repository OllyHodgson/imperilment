<%= show_for @question do |s| %>
  <%= s.association :user, using: :email %>
  <%= s.association :answer, using: :answer %>
  <%= s.attribute(:response) if @question.answer.closed? || @question.user == current_user %>
  <%= s.attribute :correct %>
  <%= s.attribute :amount %>
<% end %>

<%= link_to t(:back), [@game, @answer, Question], class: 'btn' %>
