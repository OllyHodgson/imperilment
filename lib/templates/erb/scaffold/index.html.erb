<h1><%%= t(:index_model, model: <%= class_name %>.model_name.human) %></h1>

<table class="table">
  <thead>
    <tr>
<% attributes.each do |attribute| -%>
      <th><%%= <%= class_name %>.human_attribute_name(<%= attribute.name.to_s.inspect %>) %></th>
<% end -%>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
      <tr>
<% attributes.each do |attribute| -%>
        <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
<% end -%>
        <td>
          <%%= link_to t(:show), <%= singular_table_name %>, class: 'btn' %>
          <%%= link_to t(:edit), edit_<%= singular_table_name %>_path(<%= singular_table_name %>), class: 'btn' %>
          <%%= link_to t(:destroy), <%= singular_table_name %>, method: :delete, class: 'btn btn-danger', data: {confirm: t(:confirm_destroy)} %>
        </td>
      </tr>
    <%% end %>
  </tbody>
</table>

